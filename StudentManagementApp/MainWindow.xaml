<Window x:Class="StudentManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Management" Height="600" Width="1000"
        MinHeight="480" MinWidth="720"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="72"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock DockPanel.Dock="Left" Text="Student Management" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox Width="200" 
             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
             VerticalAlignment="Center" 
             Margin="0,0,10,0"
             />
                <Button Content="Add New" Command="{Binding AddCommand}" />
                <Button Content="Delete" Command="{Binding DeleteCommand}" 
                        CommandParameter="{Binding SelectedStudent}" />
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Padding="12" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Background="#FAFAFA">
                <StackPanel DataContext="{Binding EditingStudent}">
                    <TextBlock Text="Student Details" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                    <Label Content="First Name"/>
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Last Name"/>
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Email"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Date of Birth"/>
                    <DatePicker SelectedDate="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="GPA"/>
                    <TextBox Text="{Binding GPA, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Department"/>
                    <ComboBox 
        Margin="4"
        ItemsSource="{Binding DataContext.Departments, RelativeSource={RelativeSource AncestorType={x:Type Border}}}"
        SelectedItem="{Binding Department, UpdateSourceTrigger=PropertyChanged}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button Content="Save" Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType={x:Type Border}}}" />
                        <Button Content="Reset" Command="{Binding DataContext.ResetEditCommand, RelativeSource={RelativeSource AncestorType={x:Type Border}}}" />
                        
                    </StackPanel>
                </StackPanel>
            </Border>

            <GridSplitter Grid.Column="1" Width="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <Border Grid.Column="2" Padding="8" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
                <Grid>
                    <DataGrid ItemsSource="{Binding StudentsView}" 
                              SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="100"/>
                            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                            <DataGridTextColumn Header="DOB" Binding="{Binding DateOfBirth, StringFormat=\{0:yyyy-MM-dd\}}" Width="120"/>
                            <DataGridTextColumn Header="GPA" Binding="{Binding GPA, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="80"/>
                            <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>